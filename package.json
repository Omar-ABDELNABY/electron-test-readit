{
  "name": "myReadit",
  "version": "1.0.1",
  "description": "Master Electron Course Code",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --watch * --exec 'electron .'",
    "reset": "git reset --hard",
    "inspect": "electron --inspect=5858 .",
    "create-cert": "electron-builder create-self-signed-cert -p omar",
    "set-GH_TOKEN":"$env:GH_TOKEN= <token inside double quotes>",
    "release-win": "electron-builder build -w -p 'onTagOrDraft'"
  },
  "repository": "https://github.com/stackacademytv/master-electron",
  "keywords": [
    "Electron",
    "Master Electron",
    "demo"
  ],
  "author": "GitHub, Stackacademytv",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^5.0.10",
    "electron-builder": "^21.2.0",
    "nodemon": "^1.19.2"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.readit.app",
    "win": {
      "certificateFile": "private/omar.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "omar",
      "publish": [ "github" ]
    }
  }
}
